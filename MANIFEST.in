include LICENSE
include CONTRIBUTING.rst
include CHANGELOG.rst
include CHANGELOG-v2-and-older.rst
include requirements.txt
include tox.ini
include mypy.ini
include .env.template
include Pipfile

# pykechain/py.typed is handled by package_data in pyproject.toml for wheels
# and should be included in sdists automatically if it's part of the package.

# To include tests and docs in the sdist (source distribution):
graft tests
graft docs
prune docs/_build

# General excludes for sdists
global-exclude *.py[cod]
global-exclude __pycache__
global-exclude .DS_Store
exclude .secrets.baseline
exclude .editorconfig
